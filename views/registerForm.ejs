<body class="">
    <h1 class="heading">Register your Event</h1>
    <div class="container">
        <form action="/events/register-event" method="post" id="contactForm">
            <h6>*Name:</h6>
            <!-- <input type="text" name="name" id="name" placeholder="Enter your name" required> -->
            <input type="text" name="name" id="name" value="<%= clientname %>" readonly>
            <h6>*Mobile No.:</h6>
            <input type="text" name="mobile" id="mobile" placeholder="Enter your mobile number" required>
            <h6>*Email:</h6>
            <input type="email" name="email" id="email" placeholder="Enter your email" required>
            <h6>*Event:</h6>
            <input type="text" id="eventname" name="eventname" value="<%= eventinfo %>" readonly>
            <h6>*Date:</h6>
            <input type="date" id="date" name="date" min="03-04-2023" required>
            <h6>*Location:</h6>
            <input type="text" name="location" id="location" placeholder="Enter party destination" required>
            <h6>*No of Guests:</h6>
            <input type="number" id="count" name="count" placeholder="Enter no of guests" onchange="calculateCost()" required>
            <h6>Select Package</h6>
            <select name="package" id="package" onchange="calculateCost()" required>
                <option value="select" selected>----Select an option----</option>
                <option value="silver">Silver</option>
                <option value="gold">Gold</option>
                <option value="platinum">Platinum</option>
            </select>
            <br>
            <br>
            <!-- <h6>Customise the event?</h6>
            <h6>Write about features to be included</h6> -->
            <textarea name="content" id="content" cols="30" rows="10"
                placeholder="Write about features to be included" required>
            </textarea>
            <br>
            <!-- <h6 style="color: aliceblue;">*Cost:</h6> -->
            <input type="text" id="cost" name="cost" readonly placeholder="Cost">
            <br>
            <br>
            <button type="submit" id="submit" class="btn btn-success">Submit</button>
        </form>
    </div>
    <footer class="footer" style="width: 100%;">
