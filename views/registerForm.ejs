    <script src="https://www.gstatic.com/firebasejs/7.19.1/firebase-firestore.js"></script>

    <script>
        // get the form elements
        const numGuests = document.getElementById("count");
        const package = document.getElementById("package");
        const cost = document.getElementById("cost");

        // calculate the cost when the form is submitted or values are changed
        function calculateCost() {
            // get the selected item type value
            const packageValue = package.value;
            let itemCost = 0;

            // calculate the cost based on the selected item type
            if (packageValue === "silver") {
                itemCost = 1000;
            } else if (packageValue === "gold") {
                itemCost = 5000;
            } else if (packageValue === "platinum") {
                itemCost = 10000;
            }

            // calculate the total cost
            const totalCost = numGuests.value * itemCost;

            // set the cost field value
            cost.value = totalCost;
        }

        // add event listeners to the form elements
        numGuests.addEventListener("input", calculateCost);
        package.addEventListener("input", calculateCost);

    </script>
